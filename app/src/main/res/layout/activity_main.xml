<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.scheduling.MainActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/happy48"
        android:background="@android:color/transparent"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="140dp"
        android:id="@+id/happy"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sad48"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/happy"
        android:layout_toRightOf="@+id/happy"
        android:layout_toEndOf="@+id/happy"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:id="@+id/sad" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/meh48"
        android:layout_alignTop="@+id/sad"
        android:layout_toRightOf="@+id/sad"
        android:layout_toEndOf="@+id/sad"
        android:layout_marginLeft="33dp"
        android:background="@android:color/transparent"
        android:layout_marginStart="33dp"
        android:id="@+id/meh" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/excited48"
        android:layout_alignTop="@+id/meh"
        android:layout_toRightOf="@+id/meh"
        android:background="@android:color/transparent"
        android:layout_toEndOf="@+id/meh"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:id="@+id/excited" />

    <TextView
        android:text="Happy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/happy"
        android:layout_alignLeft="@+id/happy"
        android:layout_alignStart="@+id/happy"
        android:layout_marginTop="10dp"
        android:id="@+id/happytext" />

    <TextView
        android:text="Sad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sadtext"
        android:layout_alignBaseline="@+id/happytext"
        android:layout_alignBottom="@+id/happytext"
        android:layout_toLeftOf="@+id/meh"
        android:layout_toStartOf="@+id/meh"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <TextView
        android:text="Excited"
        android:backgroundTint="#FF1493"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mehtext"
        android:layout_alignLeft="@+id/excited"
        android:layout_alignStart="@+id/excited"
        android:id="@+id/excitedtext" />

    <TextView
        android:text="Apathy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mehtext"
        android:layout_alignBaseline="@+id/sadtext"
        android:layout_alignBottom="@+id/sadtext"
        android:layout_alignLeft="@+id/meh"
        android:layout_alignStart="@+id/meh" />


    <!--<Button
        android:text="stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stat"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />-->

 <TextView
     android:text="Date"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentTop="true"
     android:layout_toRightOf="@+id/happytext"
     android:layout_toEndOf="@+id/happytext"
     android:layout_marginTop="37dp"
     android:id="@+id/date" />

 <ImageView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:srcCompat="@drawable/calendarate20"
     android:layout_alignBottom="@+id/date"
     android:layout_alignLeft="@+id/happy"
     android:layout_alignStart="@+id/happy"
     android:id="@+id/imageView2" />

 <!--<TextView
     android:text="Time"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignTop="@+id/date"
     android:layout_toRightOf="@+id/stat"
     android:layout_toEndOf="@+id/stat"
     android:id="@+id/time" />

 <ImageView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:srcCompat="@drawable/calendarime20"
     android:id="@+id/imageView3"
     android:layout_alignTop="@+id/time"
     android:layout_alignRight="@+id/excited"
     android:layout_alignEnd="@+id/excited"
     android:layout_toRightOf="@+id/time"
     android:layout_toEndOf="@+id/time" />-->

 <ImageButton
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:srcCompat="@drawable/sick48"
     android:background="@android:color/transparent"
     android:layout_below="@+id/happytext"
     android:layout_alignLeft="@+id/happytext"
     android:layout_alignStart="@+id/happytext"
     android:layout_marginTop="23dp"
     android:id="@+id/sick" />

 <TextView
     android:text="Sick"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="21dp"
     android:id="@+id/sicktext"
     android:layout_below="@+id/sick"
     android:layout_alignRight="@+id/happytext"
     android:layout_alignEnd="@+id/happytext" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/timeline48"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:layout_alignLeft="@+id/excitedtext"
        android:layout_alignStart="@+id/excitedtext"
        android:layout_marginBottom="24dp"
        android:id="@+id/stat" />

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/date"
        android:layout_toRightOf="@+id/mehtext"
        android:layout_toEndOf="@+id/mehtext"
        android:id="@+id/time" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/calendarime20"
        android:id="@+id/imageView4"
        android:layout_alignBottom="@+id/time"
        android:layout_alignRight="@+id/excited"
        android:layout_alignEnd="@+id/excited" />

    <!--<TextView
        android:text="Mar 28 2018"
